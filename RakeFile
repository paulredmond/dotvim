desc 'Install vim'
task :install do
    current_dir = File.dirname(__FILE__)
    src = "#{current_dir}/.vimrc"
    dest = Dir.home + "/.vimrc"
    File.symlink(src, dest) && puts("Symlinking #{dest} -> #{src}") unless File.symlink?(dest) || File.exists?(dest)
    exec 'vim -c "BundleInstall"'
end


task :default => [:install]
